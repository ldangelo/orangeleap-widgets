<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dwr="http://www.directwebremoting.org/schema/spring-dwr"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	   http://www.directwebremoting.org/schema/spring-dwr
	   http://www.directwebremoting.org/schema/spring-dwr-2.0.xsd">

   <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
				<value>classpath:theguru.properties</value>
            </list>
        </property>
    </bean>

	<dwr:configuration/>
	<dwr:controller id="dwrController" debug="true"/>
	
	<bean id="donateNow" class="com.orangeleap.donatenow.service.impl.DonateNowImpl">
		<dwr:remote javascript="donateNow">
		<dwr:include method="donate"/>
			<dwr:convert type="bean" class="com.orangeleap.donatenow.domain.ACHPaymentInfo"/>
			<dwr:convert type="bean" class="com.orangeleap.donatenow.domain.Address"/>
			<dwr:convert type="bean" class="com.orangeleap.donatenow.domain.CreditCardPaymentInfo"/>
			<dwr:convert type="bean" class="com.orangeleap.donatenow.domain.Donation"/>
			<dwr:convert type="bean" class="com.orangeleap.donatenow.domain.PaymentInfo"/>
			<dwr:convert type="bean" class="com.orangeleap.donatenow.domain.PaymentStatus"/>
			<dwr:convert type="enum" class="com.orangeleap.donatenow.domain.PaymentType"/>						
		</dwr:remote>
	</bean>    

	<bean name="donateNowController" class="com.orangeleap.donatenow.controller.DonateNow">
 		<property name="sessionForm" value="true"/>
 		<property name="commandName" value="donation"/>
 		<property name="commandClass" value="com.orangeleap.donatenow.domain.Donation"/>
 		<property name="formView" value="donatenow"/>
 		<property name="successView" value="thankyou"/>
 		<property name="donateNow" ref="donateNowService"/>
 	</bean>
 	
 	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
 		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
 		<property name="prefix" value="WEB-INF/jsp/"/>
 		<property name="suffix" value=".jsp"/>
 	</bean>
 	
 	<bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="order" value="0" />
		<property name="alwaysUseFullPath" value="true" />
	</bean>
    <bean id="donateNowUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" parent="urlMapping">
		<property name="mappings">
		    <props>
			    <prop key="/donatenow.htm">donateNowController</prop>
			</props>
		</property>
	</bean>
</beans>